#!/bin/bash

# Update package list and install nginx with the '-y' option
apt-get update
apt-get install -y nginx

# Create a simple HTML page with the desired content
echo "Hello World!" > /var/www/html/index.html

# Replace the default Nginx configuration to make it listen on port 80
sed -i 's/listen 80 default_server;/listen 80;/g' /etc/nginx/sites-available/default

# Restart Nginx (you can't use systemctl, so we'll use service)
service nginx restart

exit 0